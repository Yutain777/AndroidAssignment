<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


        <TextView
            android:id="@+id/welcomText"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:text="welcome"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:autoLink="phone"
            android:gravity="center"
            android:hint="time"
            android:textColor="#F87461"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomText" />

        <TextView
            android:id="@+id/recentText"
            android:layout_width="370dp"
            android:layout_height="501dp"
            android:layout_marginTop="104dp"
            android:text="top 5 moive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="136dp"
            android:layout_height="110dp"
            app:layout_constraintEnd_toStartOf="@+id/welcomText"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/moivepic" />

</androidx.constraintlayout.widget.ConstraintLayout>